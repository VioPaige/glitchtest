<html>

<head>

    <link rel="stylesheet" href="/css/universal.css" type="text/css">
    <link rel="stylesheet" href="/css/play.css" type="text/css">

    <script src="/js/socket.io.js"></script>
    <script src="/js/utils.js"></script>

    <script src="/js/connect.js"></script>

</head>

<body>

    <div class="fullbackground">

        <div class="boardwrapper">

            <div id="playerwrapper" class="playerwrapper">
                <div id="moneycount" class="moneycounter">
                    $00
                </div>
                <table id="otherplayer" class="playerbar">
                    <tbody style="display: table; width: 100%;">
                        <tr>
                            <td class="playerinfo">
                                <!-- Anonymous (L<span style="color:blueviolet;">0</span>) -->
                                <%= opponent %> (L<span style="color:blueviolet;">0</span>)
                                    [<span id="optimer">0</span>]
                            </td>
                            <td class="emptyTD"></td>
                            <td class="playerstats"></td>
                        </tr>
                    </tbody>
                </table>
            </div>

            <div class="board">
                <div id="opponentboard" class="playerboard top">
                    <div id="opSLOT1" class="cardslot slot1">
                    </div>
                    <div id="opSLOT2" class="cardslot slot2">
                    </div>
                    <div id="opSLOT3" class="cardslot slot3">
                    </div>
                    <div id="opSLOT4" class="cardslot slot4">
                    </div>
                </div>
                <div id="ownboard" class="playerboard bot">

                    <div id="ownSLOT1" class="cardslot slot1">
                    </div>
                    <div id="ownSLOT2" class="cardslot slot2">
                    </div>
                    <div id="ownSLOT3" class="cardslot slot3">
                    </div>
                    <div id="ownSLOT4" class="cardslot slot4">
                    </div>
                </div>
            </div>

            <div id="playerwrapper" class="playerwrapper">
                <div id="moneycount" class="moneycounter">
                    $00
                </div>
                <table id="player" class="playerbar">
                    <tbody style="display: table; width: 100%;">
                        <tr>
                            <td class="playerinfo">
                                <!-- Anonymous (L<span style="color:blueviolet;">0</span>) -->
                                <%= you %> (L<span style="color:blueviolet;">0</span>)
                                    [<span id="owntimer">60</span>]
                                    <button id="endturn" class="endturn">End Turn</button>
                            </td>
                            <td class="emptyTD"></td>
                            <td class="playerstats"></td>
                        </tr>
                    </tbody>
                </table>
            </div>

        </div>

        <div class="handwrapper">

            <div id="handdiv" class="hand">
                <!-- <card class="card left active"></card>
                <card class="card right active"></card>
                <card class="card left active"></card>
                <card class="card right active"></card>
                <card class="card left active"></card>
                <card class="card right active"></card> -->
            </div>

        </div>

    </div>

</body>

</html>